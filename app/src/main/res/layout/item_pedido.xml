<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">
    <!-- Logo de la aplicaciÃ³n -->

    <!-- Contenedor Horizontal para el logo -->

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView android:id="@+id/txtProducto"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.cardview.widget.CardView>