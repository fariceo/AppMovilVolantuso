<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ImageView para el producto -->
    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvcartaProducto"/>

    <!-- TextView para el nombre del producto -->
    <TextView
        android:id="@+id/tvcartaProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Producto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenProducto"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <!-- TextView para el precio del producto -->
    <TextView
        android:id="@+id/tvcartaPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvcartaProducto"
        android:gravity="center"
        tools:ignore="MissingConstraints"/>

    <!-- BotÃ³n para agregar producto -->
    <Button
        android:id="@+id/agregar_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        app:layout_constraintTop_toBottomOf="@id/tvcartaPrecio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
