<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Total a cobrar -->
    <TextView
        android:id="@+id/tvTotalCobrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total a cobrar: $0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Total a pagar -->
    <TextView
        android:id="@+id/tvTotalPagar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total a pagar: $0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalCobrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Buscar usuario -->
    <EditText
        android:id="@+id/etBuscarUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar usuario"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalPagar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPagos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etBuscarUsuario"
        app:layout_constraintBottom_toTopOf="@id/layoutNuevoUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nuevo usuario (EditText + Button) -->
    <LinearLayout
        android:id="@+id/layoutNuevoUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etNuevoUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nuevo usuario"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnAgregarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
